#:kivy 2.2.1
<MenuScreen>:
    name: 'menu_screen'
    BoxLayout:
        orientation: 'vertical'
        name: 'layout_menu_screen'
        spacing: 10
        padding: 10
        Image:
            source: 'assets/img/logo.png'
            size_hint: 1, 0.5
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10
            size_hint: 1, 0.5
            MDRoundFlatIconButton:
                id: 'bt_ultimo_resultado'
                text: 'Último Resultado'
                text_color: app.primary_color
                icon: 'magnify'
                icon_size: "64sp"
                icon_color: app.secundary_color #app.theme_cls.primary_color
                valign: 'center'
                halign: 'center'
                line_color: app.primary_color
                size_hint: 0.4, 0.3
                font_size: 20
                pos_hint: {'center_x':0.5, 'center_y':0.5}
                on_release: root.manager.current = 'ultimo_resultado_screen'            
            MDRoundFlatIconButton:
                id: 'bt_resultados'
                text: 'Resultados'
                text_color: app.primary_color
                icon: 'search-web'
                icon_size: "64sp"
                icon_color: app.secundary_color #app.theme_cls.primary_color
                valign: 'center'
                halign: 'center'
                line_color: app.primary_color
                size_hint: 0.4, 0.3
                font_size: 20
                pos_hint: {'center_x':0.5, 'center_y':0.5}
                on_release: root.manager.current = 'resultados_screen'
            MDRoundFlatIconButton:
                id: 'bt_contagem'
                text: 'Contagem Números'
                text_color: app.primary_color #app.theme_cls.primary_color
                icon: 'format-list-numbered'
                icon_size: "64sp"
                icon_color: app.secundary_color
                valign: 'center'
                halign: 'center'
                line_color: app.primary_color                
                size_hint: 0.4, 0.3
                font_size: 20
                pos_hint: {'center_x':0.5, 'center_y':0.5}
                on_release: root.manager.current = 'contagem_numeros_screen'

<UltimoResultadoScreen>:
    name: 'ultimo_resultado_screen'
    GridLayout:
        name: 'layout_ultimo_resultado_screen'
        rows: 2
        ActionBar:
