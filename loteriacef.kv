#:kivy 2.2.1
<MenuScreen>:
    name: 'menu_screen'
    BoxLayout:
        #rows:2
        orientation: 'vertical'
        name: 'layout_menu_screen'
        spacing: 10
        padding: 10
        Image:
            source: 'assets/img/logo.png'
            size_hint: 1, 0.7
        BoxLayout:
            #cols: 2
            orientation: 'horizontal'
            spacing: 10
            padding: 10
            size_hint: 1, 0.3
            MDRoundFlatIconButton:
                id: 'bt_resultados'
                text: 'Resultados'
                text_color: app.primary_color
                icon: 'search-web'
                icon_size: "64sp"
                icon_color: app.secundary_color #app.theme_cls.primary_color
                valign: 'center'
                halign: 'center'
                line_color: app.primary_color
                size_hint: 0.5, 0.4
                font_size: 20
                on_release: root.manager.current = 'resultados_screen'
            MDRoundFlatIconButton:
                id: 'bt_contagem'
                text: 'Contagem Números'
                text_color: app.primary_color #app.theme_cls.primary_color
                icon: 'format-list-numbered'
                icon_size: "64sp"
                icon_color: app.secundary_color
                valign: 'center'
                halign: 'center'
                line_color: app.primary_color                
                size_hint: 0.5, 0.4
                font_size: 20
                on_release: root.manager.current = 'contagem_numeros_screen'

<ResultadosScreen>:
    name: 'resultados_screen'
    BoxLayout:
        name: 'layout_resultados_screen'
        orientation: 'vertical'
        ActionBar:
            background_color: app.primary_color
            ActionView:
                ActionPrevious:
                    title: ''
                    app_icon: ''
                    with_previous: False
                    color: app.secundary_color
                ActionButton:
                    text: 'Buscar'
                    color: app.secundary_color
                    on_release: app.bt_ultimo_resultado_click()
                ActionSeparator:
                ActionButton:
                    text: 'Voltar'
                    color: app.secundary_color
                    on_release: root.manager.current = 'menu_screen'
        MDScrollView:
            #md_bg_color: app.secundary_color
            GridLayout:
                cols: 2
                rows: 8
                MDLabel:
                    id: 'lb_sorteio'
                    text: 'Sorteio:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_sorteio'
                    text: ''
                    readonly: True 
                    font_size: 20
                MDLabel:
                    id: 'lb_data'
                    text: 'Data:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_data'
                    text: ''       
                    readonly: True  
                    font_size: 20        
                MDLabel:
                    id: 'lb_dezena1'
                    text: '1ª Dezena:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_dezena1'
                    text: ''      
                    readonly: True            
                    font_size: 20
                MDLabel:
                    id: 'lb_dezena2'
                    text: '2ª Dezena:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_dezena2'
                    text: ''       
                    readonly: True 
                    font_size: 20
                MDLabel:
                    id: 'lb_dezena3'
                    text: '3ª Dezena:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_dezena3'
                    text: '' 
                    readonly: True 
                    font_size: 20
                MDLabel:
                    id: 'lb_dezena4'
                    text: '4ª Dezena:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_dezena4'
                    text: ''       
                    readonly: True  
                    font_size: 20 
                MDLabel:
                    id: 'lb_dezena5'
                    text: '5ª Dezena:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_dezena5'
                    text: ''       
                    readonly: True  
                    font_size: 20         
                MDLabel:
                    id: 'lb_dezena6'
                    text: '6ª Dezena:'
                    font_size: 20
                    padding: 10
                MDTextField:
                    id: 'txt_dezena6'
                    text: ''          
                    readonly: True  
                    font_size: 20      

<ContagemNumerosScreen>:
    name: 'contagem_numeros_screen'
    BoxLayout:
        name: 'layout_contagem_screen'
        orientation: 'vertical'
        ActionBar:
            background_color: app.primary_color
            ActionView:
                ActionPrevious:
                    title: 'Contagem de Números'
                    app_icon: ''
                    with_previous: False
                    color: app.secundary_color
                ActionButton:
                    text: 'Voltar'
                    color: app.secundary_color
                    on_release: root.manager.current = 'menu_screen'        
        Label:
            text: 'Contagem'                    
